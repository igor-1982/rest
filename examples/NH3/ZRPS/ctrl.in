[ctrl]
     # 设置程序输出的程度，缺省为1
     print_level =               2
     # 设置Rayon和OpenMP的并行数，缺省为1
     num_threads =               4
     # 设置使用的电子结构方法，缺省为HF
     xc =                        "zrps" 
     post_xc =                   ['lda_x_slater', 'gga_x_b88', 'gga_x_pbe', 'lda_c_vwn', 'gga_c_lyp', 'gga_c_pbe']
     post_correlation =           ["PT2", "SBGE2","RPA"]
     # 设置（辅助）基组的路径。如果找不到该路径，则创建该路径，并从BSE下载
     # 注意：计算节点需支持连接外网。
     basis_path =                "./cc-pVDZ"
     auxbas_path =               "./def2-SV(P)-JKFIT" 
     # 辅助基函数自动生成设置
     even_tempered_basis =       false
     etb_start_atom_number =     1
     etb_beta =                  1.0
     # 使用resolution-of-identity (RI)技术处理四中心积分（缺省）
     eri_type =                  "ri_v"
     use_ri_symm =               true
     use_dm_only =               true
     charge =                    0.0
     spin =                      1.0
     spin_polarization =         false
     mixer =                     "diis"
     num_max_diis =              8
     start_diis_cycle =          1
     mix_param =                 0.6
     max_scf_cycle =             100
     scf_acc_rho =               1.0e-8
     scf_acc_eev =               1.0e-8
     scf_acc_etot =              1.0e-8
     initial_guess =             "hcore"
     chkfile =                   "none"
     fchk =                      false
     pruning =                   "nwchem"
     radial_grid_method =        "treutler"
     external_grids =            "none"

